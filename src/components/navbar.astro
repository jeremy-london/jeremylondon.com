---
import Container from "@components/container.astro";
import Link from "./ui/link.astro";
import { Icon } from "astro-icon/components";

interface Menu {
  label: string;
  href: string;
  external?: boolean;
  badge?: string;
  badgeColor?: string;
  hideLabel?: boolean;
  event?: string;
}
const leftmenu: Menu[] = [
  {
    label: "Home",
    href: "/",
  },
  {
    label: "Blog",
    href: "/blog",
  },
  {
    label: "About",
    href: "/about",
  },
];

const rightmenu: Menu[] = [
  {
    label: "Contact",
    href: "/contact",
  },
  {
    label: "Github",
    href: "https://github.com/jeremy-london",
    external: true,
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/jeremyclondon/",
    external: true,
  },
  {
    label: "Subscribe to RSS",
    href: "/rss.xml",
    badge: "heroicons-outline:rss",
    badgeColor: "hover:text-blue-500 hover:dark:text-orange-500",
    hideLabel: true,
    event: "subscribe-to-rss-navbar",
  },
];

const mobilemenu: Menu[] = [...leftmenu, ...rightmenu];
---

<Container>
  <nav class="flex justify-center flex-col md:flex-row">
    <div class="flex flex-wrap justify-between md:gap-5 md:flex-nowrap">
      <div
        class="flex-col items-center justify-cewnter order-1 hidden w-full md:flex md:flex-row md:justify-end md:w-auto md:order-0 md:flex-1 gap-10">
        {
          leftmenu.map((item) => (
            <div class="flex items-center">
              <Link
                href={item.href}
                style={item.hideLabel ? "icon" : "underline"}
                size="unset"
                umamiEvent={item.event ? item.event : undefined}>
                {!item.hideLabel && item.label}
                {item.badge && (
                  <Icon
                    title={item.label}
                    class={`w-6 h-6 ${item.badgeColor}`}
                    name={item.badge}
                  />
                )}
              </Link>
            </div>
          ))
        }
      </div>

      <div class="flex items-center justify-between w-full md:w-auto">
        <button
          id="menu"
          aria-label="Toggle Menu"
          class="px-2 py-1 ml-auto text-gray-500 rounded-md md:hidden focus:text-blue-500 dark:focus:text-orange-500 focus:outline-none dark:text-gray-300">
          <svg
            class="w-6 h-6 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24">
            <path
              class="navmenu-toggle"
              fill-rule="evenodd"
              d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
            ></path>

            <path
              class="navmenu-toggle hidden"
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
            ></path>
          </svg>
        </button>
      </div>
      <div
        class="flex-col gap-10 items-center justify-start order-2 hidden w-full md:flex md:flex-row md:w-auto md:flex-1 md:order-0">
        {
          rightmenu.map((item) => (
            <div class="flex items-center">
              <Link
                href={item.href}
                style={item.hideLabel ? "icon" : "underline"}
                size="unset"
                umamiEvent={item.event ? item.event : undefined}>
                {!item.hideLabel && item.label}
                {item.badge && (
                  <Icon
                    title={item.label}
                    class={`w-6 h-6 ${item.badgeColor}`}
                    name={item.badge}
                  />
                )}
              </Link>
            </div>
          ))
        }
      </div>
    </div>
    <div class="navmenu-toggle hidden">
      <div
        class="flex flex-col items-center justify-start order-2 w-full md:hidden">
        {
          mobilemenu.map((item, index) => (
            <a
              href={item.href}
              class="px-5 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-orange-500"
              target={item.external ? "_blank" : ""}
              rel={item.external ? "noopener" : ""}>
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</Container>

<script is:inline>
  const menuButton = document.getElementById("menu");
  menuButton.addEventListener("click", () => {
    [...document.querySelectorAll(".navmenu-toggle")].forEach((Element) => {
      Element.classList.toggle("hidden");
    });
  });
</script>
